{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
  },
  "extends": "airbnb-base",
  "rules": {
    "max-len": [0, 120, 2, {ignoreComments: true}],
    "no-param-reassign": [0],
    "radix": [0],
    "camelcase": [0],
    "no-use-before-define": [0],
  },
  "env": {
    "node": true,
    "mocha": true,
  },
}
